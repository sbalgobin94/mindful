
<div class="container">
<div class="card-transparent"
<div class="card border-0 shadow my-1">
  <div class="card-body p-1">
  <center>
    <h1 class="font-weight-light"><center>Login</center></h1>
    <% if @error %>
    <p style= "color: red"> <%= @error %></p>
  <% end %>

<%= form_tag "/handle_login" do %>
    <strong>
    <div class="form-group"> 
        <%= label_tag :username %>
        <%= text_field_tag :username %>
    </div>
    <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div></strong>
        <%= submit_tag "Login!", class: 'btn    btn-success' %>
        <% end %> 
        <br></br>
        <%= button_to "No account? Register!", "/users/new" %>
    </div>
    </div>
</div>
</div>




<h1>Log In</h1>



<% if @error %>
    <p style= "color: red"> <%= @error %></p>
  <% end %>

<%= form_tag "/handle_login" do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login!" %>
<% end %> 

<br></br>

<%= button_to "No account? Register!", "/users/new" %>

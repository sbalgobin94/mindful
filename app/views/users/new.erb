<div class="container">
<div class="card-transparent"
<div class="card border-0 shadow my-1">
  <div class="card-body p-1">
  <center>
    <h1 class="font-weight-light">Register</h1>
    <br></br>
      <% if @errors %>
        <% @errors.each do |error|%>
        <p style= "color: red"> <%= error %></p>
        <% end %>
      <% end %>

<%= form_for @user do |f| %>
  <strong>
  <%= f.label :name %>
  <%= f.text_field :name %> <br/>
  <%= f.label :username %>
  <%= f.text_field :username %><br/>
  <%= f.label :password %>
  <%= f.password_field :password %><br/>
  </strong>
  <%= f.submit "Ready!", class: 'btn btn-success' %>
<% end %>
</div>
    </div>
  </div>
</div>


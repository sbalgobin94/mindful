<h1> Create an account! </h1>

<% if @errors %>
  <% @errors.each do |error|%>
    <p style= "color: red"> <%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br/>
  <%= f.label :username %>
  <%= f.text_field :username %><br/>
  <%= f.label :password %>
  <%= f.password_field :password %><br/>
  <%= f.submit "Ready!" %>
<% end %>
<br></br>
<div class="row">
    <% @therapists.each do |therapist| %>
        <section class="col-sm-6 col-md-4 col-lg-3">
            <div class="card mb-4" style="width: 16rem; height: 40rem">
                <img src=<%= therapist.image_url %> style="height: 20rem;" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= "#{therapist.name}, #{therapist.title}" %></h5>
                    <p class="card-subtitle sm"><em><%= therapist.specialty %></em></p>
                    <p class="card-text "><%= therapist.description[0...90] %>...</p>
                    <%= link_to "view more", therapist_path(therapist), :class => "btn btn-primary btn-sm"%>
                </div>
            </div>
        </section>
    <% end %>
</div>